    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typecov": "^0.2.1",
    "typescript": "^3.5.3"
  },
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ATiltedTree/projectbot.git"
